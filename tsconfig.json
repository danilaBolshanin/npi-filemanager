{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["DOM", "ES2018", "ES2020.Intl"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "types": ["jest"]
  },
  "include": ["src/*", "src/library/constants.ts", "src/library/register.ts", "src/library/pluginSetup.ts", "src/library/private.ts", "src/library/utils.ts", "src/widgets/file-tree.ts", "src/widgets/modal-content.ts", "src/widgets/modal.ts", "src/widgets/tile-file-manager.ts", "src/widgets/toggle-panel.ts", "src/widgets/top-buttons.ts", "src/widgets/uploader.ts"]
}
