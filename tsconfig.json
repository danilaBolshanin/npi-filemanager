{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["DOM", "ES2018", "ES2020.Intl"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "types": ["jest"]
  },
  "include": [
    "src/*",
    "src/library/constants.ts",
    "src/library/register.ts",
    "src/library/pluginSetup.ts",
    "src/library/private.ts",
    "src/library/utils.ts",
    "src/widgets/file-tree/index.ts",
    "src/widgets/modal/modal-content.ts",
    "src/widgets/modal/index.ts",
    "src/widgets/tile-file-manager/index.ts",
    "src/widgets/tile-file-manager/toggle-panel.ts",
    "src/widgets/top-buttons.ts",
    "src/widgets/uploader.ts",
    "src/widgets/assignment-list/validate.ts",
    "src/widgets/assignment-list/index.ts",
    "src/widgets/assignment-list/assignment-list-component.ts",
    "src/widgets/assignment-list/constants.ts",
    "src/widgets/assignment-list/assignment.ts",
    "src/widgets/assignment-list/utils.ts",
    "src/widgets/assignment-list/notebook.ts",
    "src/widgets/assignment-list/submission.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
